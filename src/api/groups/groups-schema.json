                            },
                            "parent_id": {
                                "type": "integer"
                            },
                            "member_count": {
                                "type": "integer"
                            },
                            "organization_data": {
                                "type": "array"
                            },
                            "organization_id": {
                                "type": "integer"
                            },
                            "id": {
                                "type": "integer"
                            },
                            "sub_groups": {
                                "type": "array"
                            },
                            "owners": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            }
                        },
                        "required": [
                            "parent",
                            "sub_group_count",
                            "name",
                            "parent_id",
                            "member_count",
                            "organization_data",
                            "organization_id",
